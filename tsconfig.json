{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "reflect-metadata"
    ],
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "src/**/*"    
  ],
  "exclude": [
    "src/test/**/*.test.ts",
    "node_modules"
  ]
}